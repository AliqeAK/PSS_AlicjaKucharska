{
  "info": {
    "name": "PSS_AK – FastAPI",
    "_postman_id": "pss-ak-fastapi-col",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "A — Middleware i zdrowie",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.environment.set('ts', Date.now());"
            ]
          }
        }
      ],
      "item": [
        {
          "name": "A1 GET /health (X-Process-Time)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200 OK',()=>pm.response.to.have.status(200));",
                  "pm.test('X-Process-Time',()=>pm.expect(pm.response.headers.get('X-Process-Time')).to.be.a('string'));"
                ]
              }
            }
          ]
        },
        {
          "name": "A2 GET /admin/secret bez klucza -> 401",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/secret"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('401',()=>pm.response.to.have.status(401));"
                ]
              }
            }
          ]
        },
        {
          "name": "A3 GET /admin/secret z kluczem -> 200",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/secret"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "B — CRUD /users",
      "item": [
        {
          "name": "B1 GET /users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));",
                  "pm.test('Array',()=>pm.expect(Array.isArray(pm.response.json())).to.be.true);"
                ]
              }
            }
          ]
        },
        {
          "name": "B2 POST /users (create)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user-{{ts}}\",\n  \"email\": \"user{{ts}}@example.com\",\n  \"age\": 25\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": ["pm.environment.set('ts', Date.now());"]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('201',()=>pm.response.to.have.status(201));",
                  "const u = pm.response.json(); pm.environment.set('userId', u.id);",
                  "pm.test('ma id',()=>pm.expect(u).to.have.property('id'));"
                ]
              }
            }
          ]
        },
        {
          "name": "B3 GET /users/{{userId}}",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));",
                  "pm.test('id zgodny',()=>pm.expect(pm.response.json().id).to.eql(parseInt(pm.environment.get('userId'))));"
                ]
              }
            }
          ]
        },
        {
          "name": "B4 PUT /users/{{userId}}",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user-edited-{{ts}}\",\n  \"email\": \"edited{{ts}}@example.com\",\n  \"age\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": ["pm.environment.set('ts', Date.now());"]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('200',()=>pm.response.to.have.status(200));",
                  "pm.test('username zaktualizowany',()=>pm.expect(pm.response.json().username).to.include('edited'));"
                ]
              }
            }
          ]
        },
        {
          "name": "B5 DELETE /users/{{userId}}",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('204',()=>pm.response.to.have.status(204));"
                ]
              }
            }
          ]
        },
        {
          "name": "B6 GET /users/{{userId}} (404)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('404',()=>pm.response.to.have.status(404));"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
